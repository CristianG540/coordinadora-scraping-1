{
  "compilerOptions": {
    "downlevelIteration": true,
    "module": "CommonJs",
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
      "@constants/*": ["src/constants/*"],
      "@controllers/*": ["src/controllers/*"],
      "@exceptions/*": ["src/exceptions/*"],
      "@handlers/*": ["src/handlers/*"],
      "@models/*": ["src/models/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
      "@util/*": ["src/util/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "include": ["src/**/*"]
}
